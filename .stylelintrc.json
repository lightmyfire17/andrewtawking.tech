{
  "plugins": ["stylelint-scss"],
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-prettier"],
  "rules": {
    "declaration-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "ignore": ["after-declaration"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes"]
      }
    ]
  }
}
